{
  "sound": "tmf:echo2x.scream.loop",
  "condition": "entity.getData('fiskheroes:beam_shooting') || entity.getData('fiskheroes:shield_blocking')",
  "volume": "1.3*(entity.getInterpolatedData('fiskheroes:beam_shooting_timer') + entity.getInterpolatedData('fiskheroes:shield_timer'))",
  "pitch": "1 - 0.01 * Math.min(entity.getInterpolatedData('fiskheroes:heat_vision_length'), 2)",
  "loop": true,
  "fadeIn": 10,
  "fadeOut": 20
}
