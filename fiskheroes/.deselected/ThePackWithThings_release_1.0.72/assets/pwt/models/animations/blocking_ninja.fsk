{data} = curve {data}
{rightArm_rotX} @ {data} -> 0.2{rightArm_rotX} - 1.4
{rightArm_rotY} -= 1.1{data}
{rightArm_rotZ} += 0.3{data}

{leftArm_rotX} @ {data} -> 0.2{leftArm_rotX} - 1.8
{leftArm_rotY} += 1.1{data}
{leftArm_rotZ} += 0.1{data}

out "firstPerson" (true)
out "translate" (-0.6{data}, -0.2{data}, 0)
out "rotate" (70{data}, 0, 1, 0)
out "rotate" (-80{data}, 0, 0, 1)
