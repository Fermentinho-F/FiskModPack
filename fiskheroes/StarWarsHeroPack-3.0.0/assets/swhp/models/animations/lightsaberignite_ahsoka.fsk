{data} = curve {data}
{d} = sin(pi{data})
{rightArm_rotX} @ {d} -> -2.2
{rightArm_rotZ} @ {d} -> 1.2
{rightArm_rotY} @ {d} -> -0.8

{leftArm_rotX} @ {d} -> 1.0
{leftArm_rotZ} @ {d} -> -0.5
{leftArm_rotY} @ {d} -> -1.0

out "firstPerson" (true)
out "rotate" (-70{d}, 1, 0, 0)
out "rotate" (30{d}, 0, 1, 0)
out "rotate" (-50{d}, 0, 0, 1)